{
	"compilerOptions": {
		"allowJs": false,
		"esModuleInterop": true,
        "importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
        "jsx": "react-jsx",
		"lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"]
        },
		"strict": true,
		"target": "ES2022",
		"types": ["obsidian-typings", "react", "react-dom"]
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "src/tanstack-table.d.ts", "src/tailored-cuts-obsidian.d.ts"]
}
