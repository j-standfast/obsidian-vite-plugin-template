{
	"compilerOptions": {
		"allowJs": false,
		"esModuleInterop": true,
        "importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
        "jsx": "react-jsx",
		"lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"]
        },
		"strict": true,
		"target": "ES2022",
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
