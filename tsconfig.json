{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "NodeNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "NodeNext",
		"importHelpers": true,
		"isolatedModules": true,
		"strict": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"],
		"types": ["obsidian-typings", "react", "react-dom"],
		"paths": {
			"src": ["src/*"]
		}, 
        "jsx": "react-jsx"
	},
	"include": ["**/*.ts", "src/**/*.ts"]
}
